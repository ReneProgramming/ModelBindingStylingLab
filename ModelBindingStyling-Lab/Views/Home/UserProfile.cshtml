@model UserProfile

@{
    ViewData["Title"] = "J. Doe profile page";
}

<h1 class="text-center">Profile Page</h1>

<div>
    <h4>User Profile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="background-color:lightsteelblue">
            @Html.DisplayNameFor(model => model.UserProfileId)
        </dt>
        <dd class="col-sm-10" style="background-color:#abebc6">
            @Model.UserProfileId
        </dd>
        <dt class="col-sm-2" style="background-color:gainsboro">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10" style="background-color:#abebc6">
            @Model.FullName
        </dd>
        <dt class="col-sm-2" style="background-color:lightsteelblue">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10" style="background-color:#abebc6">
            @Model.Email
        </dd>
        <dt class="col-sm-2" style="background-color:gainsboro">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10" style="background-color:#abebc6">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2" style="background-color:lightsteelblue">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10" style="background-color:#abebc6">
            @Model.ImageUrl
        </dd>
        <dt class="col-sm-2" style="background-color:gainsboro">
            @Html.DisplayNameFor(model => model.GitHubUrl)
        </dt>
        <dd class="col-sm-10" style="background-color:#abebc6">
            @Model.GitHubUrl
        </dd>
        <dt>Skilled Languages</dt>
        <dd>
            <ul>
                @foreach(string languageSkill in Model.SkilledLanguages)
                {
                    <li>@languageSkill</li>
                }
            </ul>
        </dd>
    </dl>
</div>
